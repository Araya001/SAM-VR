@{
    ViewBag.Title = "Home Page";
}



<body style="background-image: url(http://www.sydneythaiclub.com/wp-content/uploads/2015/11/IMG_9822.jpg); background-attachment: fixed; padding: 0px; ">


    <div class="container">


        <br><br><br>
        <div class="row login">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 well">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    <div class="form-group text-center">
                        <form class="form-signin">

                            <div class="form-group text-center">
                                <br><br><br>
                                <div class="logo">
                                    <img src="https://dorm.psu.ac.th/system/files/images/psupassport.png" alt="Smiley face" height="50%" width="80%">
                                </div>
                            </div>
                            <br><br><br>

                            <div class="form-group" align="center">
                                @Html.Label("PSUPassport", htmlAttributes: new { @class = "sr-only" })
                                @Html.TextBox("PSUPassport", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "PSUpassport" })
                            </div>

                            <div class="form-group" align="center">
                                @Html.Label("รหัสผ่าน", htmlAttributes: new { @class = "sr-only" })
                                @Html.Password("Password", ViewBag.CurrentFilter as string, new { @class = "form-control", @placeholder = "Password" })
                            </div>

                            <div class="form-group" align="center">
                                <input type="submit" class="btn btn-lg btn-primary btn-block" value="Login" style="margin-top:20px;" />
                            </div>
                            <br><br>

                        </form>

                    </div>
                }


            </div>
        </div>

    </div>
    </body>
